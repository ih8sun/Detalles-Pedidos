<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiTarjeta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="168dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="#DF3386"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-25dp"
            tools:layout_editor_absoluteY="-15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_marginVertical="30dp"
                android:src="@drawable/logo" />
        </LinearLayout>
        <Button
            android:id="@+id/logBtnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logBtnRegresar"
            android:onClick="irOpcionesDeAplicaciones"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"
            android:text="Mis Tarjetas"
            android:textStyle="bold"
            android:textColor="#973FB2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/tarjeta" />

        <Button
            android:id="@+id/logBtnAñadirTarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logBtnAñadirTarjeta"
            android:onClick="irAñadirTarjeta"
            android:layout_margin="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>